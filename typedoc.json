{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts", "src/types.ts"],
  "out": "docs/api",
  "theme": "default-modern",
  "plugin": ["@typhonjs-typedoc/typedoc-theme-dmt"],
  "highlightLanguages": ["ts", "json", "bash", "mermaid"],
  "excludePrivate": true,
  "includeVersion": true,
  "readme": "README.md",
  "excludeExternals": true,
  "excludeInternal": true,
  "preserveWatchOutput": true,
  "watch": false,
  "categorizeByGroup": true,
  "categoryOrder": ["Core", "Nodes", "Types", "Utils", "*"],
  "sort": ["source-order"]
}
